@using CinemaStore.Models.ViewModels
@model ScreeningViewModel

<h2>Редагування сеансу</h2>

<form asp-action="Edit" method="post" novalidate>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FilmId"></label>
        <select asp-for="FilmId" asp-items="Model.Films" class="form-control">
        </select>
        <span asp-validation-for="FilmId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Hall"></label>
        <input asp-for="Hall" class="form-control" placeholder="Вкажіть зал" />
        <span asp-validation-for="Hall" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartTime"></label>
        <input asp-for="StartTime" class="form-control datetimepicker" placeholder="дд.мм.рррр гг:хх" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input asp-for="IsOver" class="form-check-input" />
        <label asp-for="IsOver" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-success">Зберегти зміни</button>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/uk.js"></script>

    <script>
        flatpickr(".datetimepicker", {
            enableTime: true,
            dateFormat: "d.m.Y H:i",
            locale: "uk"
        });
    </script>
}
