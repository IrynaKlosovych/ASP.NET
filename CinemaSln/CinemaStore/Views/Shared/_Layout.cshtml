<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - CinemaStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
</head>
<body>
    <header class="bg-dark text-white p-3 mb-4">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">CinemaStore</h1>

                <nav>
                    <a href="/" class="text-white me-3">Головна</a>
                    <a href="/Film/Index" class="text-white">Фільми</a>
                    <a href="/Screening/Index" class="text-white">Сеанси</a>
                </nav>
            </div>
        </div>
    </header>
    <div class="container-fluid">
        <div class="row">
            <aside class="col-12 col-md-3 col-lg-2 bg-light border-end min-vh-100 p-3">
                <h5 class="mb-3">Категорії</h5>
                @await Component.InvokeAsync("NavigationMenu")
            </aside>
            <main class="col-12 col-md-9 col-lg-10 p-4">
                @RenderBody()

                @RenderSection("Scripts", required: false)
            </main>
        </div>
    </div>
    <footer class="bg-light text-center p-3 mt-4 border-top">
        <div class="container">
            &copy; 2025 CinemaStore
        </div>
    </footer>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>


