@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - CinemaStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
</head>
<body class="d-flex flex-column min-vh-100">

    <header class="bg-dark text-white p-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">CinemaStore</h1>

            <nav>
                @if (User.Identity.IsAuthenticated)
                {
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="/" class="text-white me-3">Головна</a>
                        <a href="/Film/Index" class="text-white me-3">Фільми</a>
                        <a href="/Screening/Index" class="text-white me-3">Сеанси</a>
                        <a href="/Account/AddAdmin" class="text-white me-3">Додати адміна</a>
                    }

                    <a href="/Account/Profile" class="text-white me-3">Профіль</a>
                    <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                        <button type="submit" class="btn btn-link text-white">Вийти</button>
                    </form>
                }
                else
                {
                    <a href="/Account/Login" class="text-white me-3">Увійти</a>
                    <a href="/Account/Register" class="text-white">Зареєструватися</a>
                }
            </nav>
        </div>
    </header>

    <div class="flex-grow-1">
        <div class="container-fluid h-100">
            <div class="row h-100">

                @if (User.Identity.IsAuthenticated)
                {
                    <aside class="col-12 col-md-3 col-lg-2 bg-light border-end p-3">
                        <h5 class="mb-3">Категорії</h5>
                        @await Component.InvokeAsync("NavigationMenu")
                    </aside>

                    <main class="col-12 col-md-9 col-lg-10 p-4">
                        @RenderBody()
                        @RenderSection("Scripts", required: false)
                    </main>
                }
                else
                {
                    <main class="col-12 p-4">
                        @RenderBody()
                        @RenderSection("Scripts", required: false)
                    </main>
                }

            </div>
        </div>
    </div>

    <footer class="bg-light text-center p-3 border-top mt-auto">
        <div class="container">
            &copy; 2025 CinemaStore
        </div>
    </footer>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
