@model CinemaStore.Models.ViewModels.FilmBindViewModel

<h2>Додавання фільму</h2>

<form asp-action="@ViewContext.RouteData.Values["action"]" method="post" novalidate>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" placeholder="Вкажіть назву фільму" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" placeholder="Вкажіть опис"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- РЕЙТИНГ -->
    <div class="form-group">
        <label asp-for="Rating"></label>
        <input asp-for="Rating" class="form-control" placeholder="Введіть рейтинг 0–10" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <!-- ЦІНА -->
    <div class="form-group">
        <label asp-for="TicketPrice"></label>
        <input asp-for="TicketPrice" class="form-control" placeholder="Введіть ціну квитка" />
        <span asp-validation-for="TicketPrice" class="text-danger"></span>
    </div>

    <!-- ЖАНР -->
    <div class="form-group">
        <label asp-for="Genre"></label>
        <select asp-for="Genre" asp-items="Model.Genres" class="form-control">
            <option value="">-- Оберіть жанр --</option>
        </select>
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <!-- ТРИВАЛІСТЬ -->
    <div class="form-group">
        <label asp-for="DurationMinutes"></label>
        <input asp-for="DurationMinutes" class="form-control" placeholder="Введіть тривалість (хв)" />
        <span asp-validation-for="DurationMinutes" class="text-danger"></span>
    </div>

    <!-- ДАТА ВИХОДУ -->
    <div class="form-group">
        <label asp-for="ReleaseDate"></label>
        <input asp-for="ReleaseDate" class="form-control datetimepicker" placeholder="дд.мм.рррр" />
        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Зберегти</button>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/uk.js"></script>

    <script>
        flatpickr(".datetimepicker", {
            enableTime: false,
            dateFormat: "d.m.Y",
            locale: "uk"
        });
    </script>
}
