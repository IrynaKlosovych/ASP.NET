@model CinemaStore.Models.ViewModels.FilmsListViewModel

@{
    ViewData["Title"] = "Список фільмів";
}

<h1 class="mb-4">Каталог фільмів</h1>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var film in Model.Films)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@film.Title</h5>
                    <p class="card-text">@film.Description</p>
                    <ul class="list-unstyled mb-2">
                        <li><strong>Жанр:</strong> @film.Genre</li>
                        <li><strong>Рейтинг:</strong> @film.Rating</li>
                        <li><strong>Тривалість:</strong> @film.DurationMinutes хв</li>
                        <li><strong>Дата виходу:</strong> @film.ReleaseDate.ToString("dd.MM.yyyy")</li>
                    </ul>
                    <h6 class="text-success"><strong>Ціна квитка:</strong> @film.TicketPrice.ToString("c")</h6>
                </div>
            </div>
        </div>
    }
</div>

<hr class="my-4" />

<div class="d-flex justify-content-between align-items-center mb-3">
    <p class="mb-0">
        Поточна сторінка: <strong>@Model.PagingInfo.CurrentPage</strong>
        з <strong>@Model.PagingInfo.TotalPages</strong>
    </p>

    <form class="d-flex" method="get" asp-action="Index">
        <label for="page" class="me-2 my-auto">Перейти на сторінку:</label>
        <input type="number" id="page" name="page"
               class="form-control me-2"
               style="width: 100px;"
               min="1"
               max="@Model.PagingInfo.TotalPages"
               value="@Model.PagingInfo.CurrentPage" />
        <button type="submit" class="btn btn-primary">Перейти</button>
    </form>
</div>

<nav aria-label="Pagination">
    <ul class="pagination justify-content-center">
        @if (Model.PagingInfo.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Index", new { page = Model.PagingInfo.CurrentPage - 1 })">← Попередня</a>
            </li>
        }

        @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PagingInfo.CurrentPage ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
            </li>
        }

        @if (Model.PagingInfo.CurrentPage < Model.PagingInfo.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Index", new { page = Model.PagingInfo.CurrentPage + 1 })">Наступна →</a>
            </li>
        }
    </ul>
</nav>



