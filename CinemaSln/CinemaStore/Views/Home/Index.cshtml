@model CinemaStore.Models.ViewModels.FilmsListViewModel

@{
    @if (User.Identity.IsAuthenticated)
    {
        ViewData["Title"] = "Список фільмів";
    }
    else
    {
        ViewData["Title"] = "";
    }
}

@if (User.Identity.IsAuthenticated)
            {
<h1 class="mb-4">Каталог фільмів</h1>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var film in Model.Films)
    {
        <partial name="FilmSummary" model="film" />
    }
</div>

<hr class="my-4" />

<div class="d-flex justify-content-between align-items-center mb-3">
    <p class="mb-0">
        Поточна сторінка: <strong>@Model.PagingInfo.CurrentPage</strong>
        з <strong>@Model.PagingInfo.TotalPages</strong>
    </p>

    <form class="d-flex" method="get" asp-action="Index">
        <label for="page" class="me-2 my-auto">Перейти на сторінку:</label>
        <input type="number" id="page" name="page"
               class="form-control me-2"
               style="width: 100px;"
               min="1"
               max="@Model.PagingInfo.TotalPages"
               value="@Model.PagingInfo.CurrentPage" />
        <button type="submit" class="btn btn-primary">Перейти</button>
    </form>
</div>

<nav aria-label="Pagination">
    <ul class="pagination justify-content-center">
        @if (Model.PagingInfo.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link"
                   href="@Url.Action("Index", new { 
                       page = Model.PagingInfo.CurrentPage - 1, 
                       genre = Model.CurrentGenre 
                   })">
                    ← Попередня
                </a>
            </li>
        }

        @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PagingInfo.CurrentPage ? "active" : "")">
                <a class="page-link"
                   href="@Url.Action("Index", new { 
                       page = i, 
                       genre = Model.CurrentGenre 
                   })">
                    @i
                </a>
            </li>
        }

        @if (Model.PagingInfo.CurrentPage < Model.PagingInfo.TotalPages)
        {
            <li class="page-item">
                <a class="page-link"
                   href="@Url.Action("Index", new { 
                       page = Model.PagingInfo.CurrentPage + 1, 
                       genre = Model.CurrentGenre 
                   })">
                    Наступна →
                </a>
            </li>
        }
    </ul>
    </nav>
}
else
{
     <div class="d-flex justify-content-center align-items-center" style="height: 60vh;">
        <div class="card shadow-lg p-4 text-center" style="max-width: 400px; width: 100%;">
            <h3 class="mb-3">Авторизація необхідна</h3>
            <p class="text-muted mb-4">
                Щоб переглядати каталог фільмів або бронювати квитки — увійдіть до акаунта.
            </p>

            <a href="/Account/Login" class="btn btn-primary w-100 mb-2">Увійти</a>
            <a href="/Account/Register" class="btn btn-outline-secondary w-100">Створити акаунт</a>
        </div>
    </div>
}