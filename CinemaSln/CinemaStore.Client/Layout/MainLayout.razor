@inherits LayoutComponentBase
@using CinemaStore.Client.Providers
@using CinemaStore.Client.Shared
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavManager

<PageTitle>CinemaStore</PageTitle>

<div class="d-flex flex-column min-vh-100">
    <header class="bg-dark text-white p-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">CinemaStore</h1>

            <nav class="d-flex align-items-center">
                <AuthorizeView>
                    <Authorized>
                        @if (isAdmin)
                        {
                            <a href="/" class="text-white me-3">Головна</a>
                            <a href="/films" class="text-white me-3">Фільми</a>
                            <a href="/sessions" class="text-white me-3">Сеанси</a>
                            <a href="/add-admin" class="text-white me-3">Додати адміна</a>
                        }

                        <a href="/profile" class="text-white me-3">Профіль</a>
                        <button class="btn btn-link text-white p-0 m-0" @onclick="Logout">Вийти</button>
                    </Authorized>
                    <NotAuthorized>
                        <a href="/login" class="text-white me-3">Увійти</a>
                        <a href="/register" class="text-white">Зареєструватися</a>
                    </NotAuthorized>
                </AuthorizeView>
            </nav>
        </div>
    </header>

    <div class="flex-grow-1">
        <div class="container-fluid h-100">
            <div class="row h-100">

                <AuthorizeView>
                    <Authorized>
                        <aside class="col-12 col-md-3 col-lg-2 bg-light border-end p-3">
                            <h5 class="mb-3">Меню</h5>
                            <NavMenu />
                        </aside>

                        <main class="col-12 col-md-9 col-lg-10 p-4">
                            @Body
                        </main>
                    </Authorized>
                    <NotAuthorized>
                        <main class="col-12 p-4">
                            @Body
                        </main>
                    </NotAuthorized>
                </AuthorizeView>

            </div>
        </div>
    </div>

    <footer class="bg-light text-center p-3 border-top mt-auto">
        <div class="container">
            &copy; @DateTime.Now.Year CinemaStore
        </div>
    </footer>

</div>

@code {
    private bool isAdmin;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        isAdmin = user.IsInRole("Admin");
    }

    private async void Logout()
    {
        if (AuthStateProvider is CustomAuthStateProvider customAuth)
        {
            await customAuth.Logout();
        }

        NavManager.NavigateTo("/", forceLoad: true);
    }
}
